{
  "name": "python-clean-architecture",
  "dockerFile": "Dockerfile",
  "runArgs": [
    // Sync git config
    "-v",
    "${env:HOME}${env:USERPROFILE}/.gitconfig:/root/.gitconfig"
  ],
  "postCreateCommand": [
    // "pip install -r requirements.txt && pip install -r db/replace/requirements.txt && pip install -r db/test/requirements.txt"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "editorconfig.editorconfig",
        "ms-python.python"
      ],
      "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "python.analysis.extraPaths": [
          "/usr/local/lib/python3.11/site-packages/"
        ]
      }
    }
  }
}
